<div class="container">

    <div class="jumbotron">
        <h1>Order Your Burger </h1>
        <br>
        
    </div>
    <div class="row">
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading" id="leftside"><strong>Order Your Burger</strong>
                </div>
                <div class="panel-body">
                    <ul>
                        {{#each burgers}}
                            {{#unless devoured}}
                                <li>{{this.id}} - {{this.burger_name}}</li>
                                <button type="button" class="eatburger btn btn-primary" id="eatbutton" data-id="{{this.id}}" data-newDevoured="{{devour}}"></button>
                            {{/unless}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading" id="rightside"><strong>Devour Your Burger</strong>
                </div>
                <div class="panel-body">
                    <ul>
                        {{#each burgers}}
                        {{#if devoured}}
                        <span><strong> {{this.id}} - {{this.burger_name}}</strong></span>
                        <button type="button" class="deleteburger btn btn-danger" id="deletebutton" data-id="{{this.id}}"
                            data-newDevoured="{{devour}}"></span></button>
                        <hr>
                        {{/if}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>

    </div>
    <!--endrow -->
</div>